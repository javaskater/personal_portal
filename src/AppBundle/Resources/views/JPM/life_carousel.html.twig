<div class="col-sm-9 title">
    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
            <li data-target="#myCarousel" data-slide-to="3"></li>
        </ol>
        <div class="carousel-inner" role="listbox">
            <div class="carousel-item active">
                <img class="d-block img-fluid ml-auto mr-auto" src="{{ asset('jpm/images/carousel/berlin2014.jpg') }}" alt="Berlin Marathon">
                <div class="carousel-caption">
                    <h3>{% trans %}carousel.berlin_marathon.title{% endtrans %}</h3>
                    <p>{% trans %}carousel.berlin_marathon.desc{% endtrans %}</p>
                </div>
            </div>
            <div class="carousel-item">
                <img class="d-block img-fluid ml-auto mr-auto" src="{{ asset('jpm/images/carousel/mesnieres.jpg') }}" alt="Castle of Mesnieres">
                <div class="carousel-caption">
                    <h3>{% trans %}carousel.mesnieres.title{% endtrans %}</h3>
                    <p>{% trans %}carousel.mesnieres.desc{% endtrans %}</p>
                </div>
            </div>
            <div class="carousel-item">
                <img class="d-block img-fluid ml-auto mr-auto" src="{{ asset('jpm/images/carousel/gnomeshell.jpg') }}" alt="My Ubuntu Workstation">
                <div class="carousel-caption">
                    <h3>{% trans %}carousel.ubuntu_workstation.title{% endtrans %}</h3>
                    <p>{% trans %}carousel.ubuntu_workstation.desc{% endtrans %}</p>
                </div>
            </div>
            <div class="carousel-item">
                <img class="d-block img-fluid ml-auto mr-auto" src="{{ asset('jpm/images/carousel/seineboisleroi.jpg') }}" alt="Seine near Fontainebleau">
                <div class="carousel-caption">
                    <h3>{% trans %}carousel.fontainebleau.title{% endtrans %}</h3>
                    <p>{% trans %}carousel.fontainebleau.desc{% endtrans %}</p>
                </div>
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">{% trans %}carousel.prev.info{% endtrans %}</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">{% trans %}carousel.next.info{% endtrans %}</span>
        </a>
    </div>
</div>
